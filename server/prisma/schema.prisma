generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  username   String
  email      String   @unique
  password   String
  photo_url  String?
  role       Role     @default(USER)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  pets       Pet[]
}

model Pet {
  id                String            @id @default(uuid())
  name              String
  age               String?
  weight            Float?
  specie            String
  breed             String?
  photo_urls        String[]
  owner_id          String
  created_at        DateTime          @default(now())
  updated_at        DateTime          @updatedAt
  health_records    HealthRecord[]
  nutrition_records NutritionRecord[]
  owner             User              @relation(fields: [owner_id], references: [id])
  reminders         Reminder[]
}

model HealthRecord {
  id            String           @id @default(uuid())
  pet_id        String
  type          HealthRecordType
  description   String?
  first_date    DateTime?
  second_date   DateTime?
  document_urls String[]
  vet_name      String?
  created_at    DateTime         @default(now())
  updated_at    DateTime         @updatedAt
  pet           Pet              @relation(fields: [pet_id], references: [id])
}

model NutritionRecord {
  id           String   @id @default(uuid())
  pet_id       String
  food_type    String
  food_brand   String?
  daily_meals  Int
  portion_size String
  notes        String?
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
  pet          Pet      @relation(fields: [pet_id], references: [id])
}

model Reminder {
  id           String       @id @default(uuid())
  pet_id       String
  title        String
  type         ReminderType
  date         DateTime
  is_completed Boolean      @default(false)
  created_at   DateTime     @default(now())
  updated_at   DateTime     @updatedAt
  pet          Pet          @relation(fields: [pet_id], references: [id])
}

enum Role {
  USER
  ADMIN
}

enum HealthRecordType {
  VACUNA
  CHEQUEO
  TRATAMIENTO
  
}

enum ReminderType {
  VACUNA
  ALIMENTACION
  VISITA
  TRATAMIENTO
  OTRO
}